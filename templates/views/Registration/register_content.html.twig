{% trans_default_domain 'FOSUserBundle' %}
<center xmlns:margin-bottom="http://www.w3.org/1999/xhtml">
    {% for message in app.flashes('success') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

    <center>

        {{ form_start(form, {'method': 'post', 'action': path('create_compte_pack'), 'attr': {'class': 'create_compte_pack'}}) }}
        <table>
            <tr>
                <td>
                    {{ form_label(form.email) }}
                </td>
                <td>
                    {{ form_widget(form.email) }}
                </td>
            </tr>

            <tr>
                <td>
                    {{ form_label(form.username) }}
                </td>
                <td>
                    {{ form_widget(form.username) }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(form.prenom) }}
                </td>
                <td>
                    {{ form_widget(form.prenom) }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label((form.plainPassword.first)) }}

                </td>
                <td>
                    {{ form_widget((form.plainPassword.first)) }}
                    {{ form_errors((form.plainPassword.first)) }}

                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label((form.plainPassword.second)) }}

                </td>
                <td>
                    {{ form_widget((form.plainPassword.second)) }}
                    {{ form_errors((form.plainPassword.second)) }}
                </td>
            </tr>

            <tr>
                <td>
                    {{ form_label(form.couleur) }}
                </td>
                <td>
                    {{ form_widget(form.couleur) }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(form.famille) }}
                </td>
                <td>
                    {{ form_widget(form.famille) }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(form.nouriture) }}
                </td>
                <td>
                    {{ form_widget(form.nouriture) }}
                </td>
            </tr>
            <tr>
                <td>
                    {{ form_label(form.date) }}
                </td>
                <td>
                    {{ form_widget(form.date) }}
                </td>
            </tr>


        </table>
        <br>
        <div>
            <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-lg btn-success btn-block"
                   style="width: 120px ;height: 50px"/>
        </div> {{ form_end(form) }}


        {{ form_end(form) }}


    </center>
</center>